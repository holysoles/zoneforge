{% extends 'layout.html.j2' %}
{% block content %}
    <div class="manager">
        <div class="header-row">
            <h3>Zone: {{zone}}</h3>
            <div class="zone-options">
                {% if modal is defined %}
                    <button class="delete-zone" onclick="document.querySelector('#{{ modal.id }}').classList.toggle('modal-active')">{{ modal['open-char'] }}</button>
                {% endif %}
            </div>
        </div>
        <div class="zones">
            <table>
                <thead>
                    <tr>
                        <th>Select</th>
                        <th>Record Name</th>
                        <th>Record Type</th>
                        <th>TTL</th>
                        <th>Data</th>
                        <th>Comment</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                    {% for record in records %}
                    {% set record_url_path = url_for("record_resource", **{"record_name": record.name, "zone_name": zone}) %}
                    <tr data-record-name="{{ record.name }}" data-url="{{ record_url_path }}">
                        <td><input type="checkbox"></td>
                        <td class="editable" data-field="name">{{ record.name }}</td>
                        <td class="editable" data-field="type">{{ record.type }}</td>
                        <td class="editable" data-field="ttl">{{ record.ttl }}</td>
                        <td class="editable" data-field="data">
                            {% if record.data %}
                                {% for key, value in record.data.items() %}
                                    {{ key[0]|upper}}{{key[1:] }}: {{ value }}<br>
                                {% endfor %}
                            {% endif %}
                        </td>
                        <td class="editable" data-field="comment">{{ record.comment }}</td>
                        <td class="actions-cell">
                            <div class="actions">
                                <button class="edit">Edit</button>
                                <button class="save" style="display: none;">Save</button>
                                <button class="cancel" style="display: none;">Cancel</button>
                                <button class="delete">Delete</button>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% if modal is defined %}
            {% include 'modal.html.j2' %}
        {% endif %}
    </div>
    <script src="{{ url_for('static', filename='js/zone.js') }}"></script>
{% endblock %}